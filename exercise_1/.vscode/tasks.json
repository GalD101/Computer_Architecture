{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g",             // Include debugging symbols
                "-fno-pie",       // Do not generate position-independent code
                "-no-pie",        // Disable PIE for the linker
                "-o",
                "main.out",        // Output executable name
                "main.s"          // Input assembly file
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
