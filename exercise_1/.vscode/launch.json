{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug Assembly Program",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/main.out",    // Path to the executable
            "args": [],                                // Arguments for the program
            "stopAtEntry": true,                      // Stop at the entry point
            "cwd": "${workspaceFolder}",              // Set working directory
            "environment": [],
            "externalConsole": false,                 // Use integrated terminal
            "MIMode": "gdb",                          // Use GDB for debugging
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for GDB",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                },
                {
                    "description": "Set disassembly flavor to AT&T",
                    "text": "set disassembly-flavor att",
                    "ignoreFailures": true
                }
            ],
            "miDebuggerPath": "/usr/bin/gdb",         // Adjust if gdb is in a different location
            "preLaunchTask": "build"                 // Run the "build" task before debugging
        }
    ]
}
